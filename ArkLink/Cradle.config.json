{
  "project": {
    "name": "ArkLink",
    "output": "ArkLink"
  },
  "directories": {
    "source": "src",
    "objects": "build",
    "binary": ".",
    "include": ["include"]
  },
  "compiler": {
    "cc": "gcc",
    "standard": "c11",
    "debug_flags": ["-g", "-DDEBUG", "-Wall", "-Wextra"],
    "release_flags": ["-O2", "-DNDEBUG", "-Wall", "-Wextra", "-Werror"],
    "extra_flags": [],
    "defines": [],
    "libraries": [],
    "platform_libraries": {
      "win32": [],
      "linux": []
    }
  },
  "build": {
    "max_workers": 4,
    "timeout": 60,
    "incremental": true,
    "auto_detect_sources": true,
    "source_extensions": [".c"],
    "header_extensions": [".h"],
    "exclude_patterns": ["test_*.c"]
  },
  "features": {
    "colored_output": true,
    "progress_bar": true,
    "build_statistics": true,
    "dependency_tracking": true
  }
}
