{
  "project": {
    "name": "E# Builder",
    "output": "e_sharp"
  },
  "directories": {
    "source": "src",
    "objects": "obj",
    "binary": "bin",
    "include": [
      "src",
      "src/core",
      "src/core/memory",
      "src/core/platform",
      "src/core/utils",
      "src/compiler",
      "src/compiler/frontend/lexer",
      "src/compiler/frontend/parser",
      "src/compiler/frontend/semantic",
      "src/compiler/middle/ir",
      "src/compiler/middle/codegen",
      "src/compiler/backend/x86",
      "src/compiler/backend/vm",
      "src/compiler/backend/eo",
      "src/compiler/driver",
      "src/tools",
      "src/runtime",
      "src/vm",
      "src/lsp",
      "src/lsp/protocol",
      "src/lsp/handlers",
      "src/lsp/features"
    ]
  },
  "compiler": {
    "cc": "gcc",
    "alternatives": [
      "gcc",
      "clang"
    ],
    "standard": "c99",
    "debug_flags": [
      "-g",
      "-DDEBUG",
      "-Wall",
      "-Wextra"
    ],
    "release_flags": [
      "-O2",
      "-DNDEBUG",
      "-Wno-unused-parameter"
    ],
    "extra_flags": [],
    "defines": ["_POSIX_C_SOURCE=200809L", "_GNU_SOURCE"],
    "libraries": ["m"],
    "platform_libraries": {
      "win32": ["ws2_32", "gdi32", "user32"],
      "linux": ["pthread"]
    }
  },
  "build": {
    "max_workers": 4,
    "timeout": 60,
    "incremental": true,
    "auto_detect_sources": true,
    "source_extensions": [
      ".c"
    ],
    "header_extensions": [
      ".h"
    ],
    "exclude_patterns": ["test_*.c", "*_test.c", "**/standalone/*.c", "test*.c"]
  },
  "features": {
    "colored_output": true,
    "progress_bar": true,
    "build_statistics": true,
    "dependency_tracking": true
  }
}